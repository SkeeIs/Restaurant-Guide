<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">TV Show Tracker</h1>
    <p class="lead">Add and track the shows you want to watch!</p>
    <hr>
    <form class="create-form" action="/api/shows" method="post">
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control" id="show-name" name="name"
                aria-label="Show Name"
                placeholder="Show Name">
            <div class="input-group-append">
                <button class="btn btn-success" type="submit">Add Show</button>
            </div>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="jumbotron jumbotron-fluid text-center"> 
    <div class="row">
        <div class="col-12 col-lg-4 mb-4">
          <div class="card" id="not-started-shows">
            <div class="card-header">
              <h4>Unwatched Shows</h4>
            </div>  
            <div class="card-body">
              <div class="card-text">  
                {{#each shows}}
                  {{#unless this.have_started}} 
                    {{> shows/show-block have_started=true watched_all=true}}
                  {{/unless}}
                {{/each}}  
              </div> 
            </div>   
          </div>
        </div>
        <div class="col-12 col-lg-4 mb-4">
          <div class="card" id="started-not-finished-shows">
            <div class="card-header">
              <h4>Partly Watched Shows</h4>
            </div>  
            <div class="card-body">
              <div class="card-text">  
                {{#each shows}}
                  {{#if this.have_started}}
                    {{#unless this.watched_all}}
                      {{> shows/show-block have_started=false watched_all=true}}
                    {{/unless}}
                  {{/if}}
                {{/each}}  
              </div>
            </div>    
          </div>
        </div>
        <div class="col-12 col-lg-4 mb-4">
          <div class="card" id="started-not-finished-shows">
            <div class="card-header">
              <h4>Finished Shows</h4>
            </div>  
            <div class="card-body">
              <div class="card-text">
                {{#each shows}}
                  {{#if this.watched_all}}
                    {{> shows/show-block have_started=false watched_all=false}}
                  {{/if}}
                {{/each}}  
              </div>  
          </div>
        </div>
    </div>
</div>